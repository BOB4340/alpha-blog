<h1>Showing All Article Details</h1>
<table border="0" width="40%">
  <thead>
    <tr>
      <th>ID</th><th>Article</th><th>Description</th><th colspan="3">Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @article.each do |col| %>
    <tr >
      <td align="center"><%= col.id %></td><td><%= col.title %></td><td><%= col.description %></td>
      <td>
       <%= link_to 'Show', article_path(col) %>
      </td>
      <td>
        <%= link_to 'Edit', edit_article_path(col) %>
      </td>
      <td>
        <%= link_to 'Delete', article_path(col.id), method: :delete, data: {confirm: "Do you want to delete?"} %>
      </td>
    </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Article', new_article_path %>
<%= link_to 'Home', root_path %>