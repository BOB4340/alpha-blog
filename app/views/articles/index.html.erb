<h1>Showing All Article Details</h1>
<table border="0" width="40%">
  <thead>
    <tr>
      <th>ID</th><th>Article</th><th>Description</th><th>Actions</th>
    </tr>
  </thead>
  <tbody>
    <% @article.each do |col| %>
    <tr >
      <td align="center"><%= col.id %></td><td><%= col.title %></td><td><%= col.description %></td>
      <td>Placeholder</td>
    </tr>
    <% end %>
  </tbody>
</table>